{
  "compilerOptions": {
    "target": "es6", // Target modern JavaScript (ES6+)
    "module": "commonjs", // Use CommonJS module system
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES6 modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "types": ["jest"] // Include type definitions for Jest
  },
  "include": [
    "src/**/*.ts", // Include all TypeScript files in the src directory
    "src/**/*.test.ts" // Include all test files
  ],
  "exclude": [
    "node_modules" // Exclude the node_modules directory
  ]
}
